{
	"extends": "airbnb-base",
	"env": {
		"node": true,
		"mocha": true
	},
	"parserOptions": {
		"ecmaVersion": 8
	},
	"rules": {
		"semi": [2, "never"],
		"camelcase": 0,
		"indent": [2, "tab", { "SwitchCase": 1 }],
		"no-tabs": 0,
		"max-len": 0,
		"no-param-reassign": [2, { "props": false }],
		"func-names": [2, "never"]
	}
}
